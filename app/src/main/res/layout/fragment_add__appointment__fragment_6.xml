<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor2"
    tools:context=".Fragments.Add_Appointment_Fragment_6">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:padding="30dp"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/frg_appointment_6_t1"
        android:text="약속이 완성되었습니다."
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/frg_appointment_6_t1"
        android:layout_marginTop="10dp"
        android:id="@+id/frg_appointment_6_t2"
        android:text="약속 상세 정보를 확인해 보세요."
        android:textColor="#ffffff"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:id="@+id/frg_appointment_6_btn"
        android:background="@drawable/corner_maincolor3"
        android:layout_marginTop="30dp"
        android:text="상세 정보 보기"
        android:textColor="@color/mainColor2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/frg_appointment_6_t2"/>

    </RelativeLayout>
