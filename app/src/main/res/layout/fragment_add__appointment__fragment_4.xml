<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor2"
    android:padding="30dp"
    tools:context=".Fragments.Add_Appointment_Fragment_4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/frg_appointment_4_t1"
        android:text="Step 4"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/frg_appointment_4_t1"
        android:layout_marginTop="10dp"
        android:id="@+id/frg_appointment_4_t2"
        android:text="벌금과 벌금을 측정할 주기를 설정해주세요"
        android:textColor="#ffffff"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="벌금 주기"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/frg_appointment_4_t3"
        android:layout_below="@id/frg_appointment_4_t2"
        android:layout_marginTop="20dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:id="@+id/frg_appointment_4_btn"
        android:background="@drawable/corner_maincolor3"
        android:layout_marginTop="30dp"
        android:text="확인"
        android:layout_below="@id/frg_appointment_4_t3"
        android:textColor="@color/mainColor2"
        android:textSize="18sp"
        android:textStyle="bold"
        />



</RelativeLayout>